@model IEnumerable<EntityLayer.Concrete.InternStatus>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container-fluid col-12 mt-3">
    <div>
        <h2>
            Staj Aşamaları Tablosu
        </h2>
        <br />
        <a class="btn btn-primary btn-sm" href="/InternStatus/AddNewType/">
            Staj Aşaması Ekle
        </a>
        <table class="table table-hover table-striped table-bordered mt-3">
            <thead>
                <tr>
                    <th scope="col">Staj Aşaması ID</th>
                    <th scope="col">Staj Aşaması İsmi</th>
                    <th scope="col">Staj Aşaması Açıklama</th>
                    <th scope="col">Durum</th>
                    <th scope="col" class="text-center" style="min-width: 300px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.InternStatusID 
                        </td>
                        <td>
                            @item.InternStatusName
                        </td>
                        <td>
                            @item.InternStatusDesc
                        </td>
                        <td>
                            @item.InternStatuss
                        </td>
                        <td class="project-actions text-center">
                            <a class="btn btn-warning btn-sm" href="/InternStatus/UpdateType/@item.InternStatusID">
                                Düzenle
                            </a>
                            <a class="btn btn-danger btn-sm" href="/InternStatus/Pasif/@item.InternStatusID">
                                Pasif Yap
                            </a>
                            <a class="btn btn-success btn-sm" href="/InternStatus/Active/@item.InternStatusID">
                                Aktif Yap
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>