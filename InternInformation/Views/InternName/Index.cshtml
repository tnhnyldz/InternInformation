@model IEnumerable<EntityLayer.Concrete.InternName>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container-fluid col-12 mt-3">
    <div>
        <h2>
            Staj Tipleri Tablosu
        </h2>
        <br />
        <a class="btn btn-primary btn-sm" href="/InternName/AddNewType/">
           Staj Tipi Ekle
        </a>
        <table class="table table-hover table-striped table-bordered mt-3">
            <thead>
                <tr>
                    <th scope="col">Staj Tipi ID</th>
                    <th scope="col">Staj İsmi</th>
                    <th scope="col">Staj Açıklama</th>
                    <th scope="col">Durum</th>
                    <th scope="col" class="text-center" style="min-width: 300px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.InternNameID
                        </td>
                        <td>
                            @item.InternNamee
                        </td>
                        <td>
                            @item.InternNameDesc
                        </td>
                        <td>
                            @item.InternStatus
                        </td>
                        <td class="project-actions text-center">
                            <a class="btn btn-warning btn-sm" href="/InternName/UpdateType/@item.InternNameID">
                                Düzenle
                            </a>
                            <a class="btn btn-danger btn-sm" href="/InternName/Pasif/@item.InternNameID">
                                Pasif Yap
                            </a>
                            <a class="btn btn-success btn-sm" href="/InternName/Active/@item.InternNameID">
                                Aktif Yap
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>